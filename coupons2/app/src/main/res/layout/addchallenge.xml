<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/BackgroundColor"
    >

    <TextView
        android:id="@+id/AddChallengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add a new challenge!"
        android:textSize="22sp"
        android:textColor="@color/FirstColor"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:boxCornerRadiusBottomEnd="200dp"
        app:boxCornerRadiusBottomStart="200dp"
        app:boxCornerRadiusTopEnd="200dp"
        app:boxCornerRadiusTopStart="200dp"
        android:layout_margin="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EnterQuestionField"
        android:padding="15dp"
        android:textColor="@color/SecondColor"
        android:hint="Question"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:boxCornerRadiusBottomEnd="200dp"
        app:boxCornerRadiusBottomStart="200dp"
        app:boxCornerRadiusTopEnd="200dp"
        app:boxCornerRadiusTopStart="200dp"
        android:layout_margin="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EnterAnswerField"
        android:padding="15dp"
        android:textColor="@color/SecondColor"
        android:hint="Answer"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:boxCornerRadiusBottomEnd="200dp"
        app:boxCornerRadiusBottomStart="200dp"
        app:boxCornerRadiusTopEnd="200dp"
        app:boxCornerRadiusTopStart="200dp"
        android:layout_margin="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EnterCouponField"
        android:padding="15dp"
        android:textColor="@color/SecondColor"
        android:gravity="center"
        android:hint="Coupon"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:boxCornerRadiusBottomEnd="200dp"
        app:boxCornerRadiusBottomStart="200dp"
        app:boxCornerRadiusTopEnd="200dp"
        app:boxCornerRadiusTopStart="200dp"
        android:layout_margin="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EnterDiscountField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Percentage"
            android:padding="15dp"
            android:textColor="@color/SecondColor"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

<Button
    android:id="@+id/addButton"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/forms_button"
    android:text="Add"
    android:textColor="@color/BackgroundColor"
    android:textSize="18dp"
    android:textStyle="bold"
    android:layout_gravity="center" />
</LinearLayout>

